<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ChatP2P.HostWindow"
        Width="300" Height="250"
        Background="#2C2F33"
        Title="Hospedar Servidor">

    <Window.Styles>
        <Style Selector="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="TextBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#23272A"/>
            <Setter Property="BorderBrush" Value="#5865F2"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Width" Value="200"/>
        </Style>
        <Style Selector="Button">
            <Setter Property="Background" Value="#5865F2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Width" Value="200"/>
        </Style>
        <Style Selector="Button:pointerover">
            <Setter Property="Background" Value="#4752C4"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,*">
        <!-- Botão Voltar no canto superior esquerdo -->
        <Button x:Name="BtnVoltar"
                Content="⟵ Voltar"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="10"
                Width="80"
                Height="30"/>

        <!-- Conteúdo central -->
        <StackPanel Grid.Row="1"
                    Margin="0"
                    Spacing="20"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">

            <TextBlock Text="Escolha a porta:" 
                       FontSize="18"
                       HorizontalAlignment="Center"/>

            <TextBox x:Name="TxtPorta" Watermark="Ex: 8080"/>

            <Button x:Name="BtnConfirmar" Content="Confirmar"/>

        </StackPanel>
    </Grid>
</Window>
