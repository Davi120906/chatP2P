<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="300"
        Height="150"
        CanResize="False"
        Background="#2b2d31"
        WindowStartupLocation="CenterScreen"
        x:Class="ChatP2P.CaixaMensagem">

    <Border Background="#2b2d31"
            CornerRadius="10"
            Padding="15">
        <StackPanel Spacing="15" VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBlock x:Name="MensagemTexto"
                       Foreground="White"
                       FontSize="14"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"/>

            <Button x:Name="BtnOk"
                    Content="OK"
                    Width="80"
                    HorizontalAlignment="Center"
                    Background="#5865F2"
                    Foreground="White"
                    CornerRadius="8"
                    Padding="6"/>
        </StackPanel>
    </Border>
</Window>
